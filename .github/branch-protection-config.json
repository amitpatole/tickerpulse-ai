{
  "required_status_checks": {
    "strict": true,
    "contexts": [
      "CI / Backend Tests (Python 3.12)",
      "CI / Frontend Tests (Node 24)",
      "CI / Electron Tests (Node 24)",
      "CI / Windows Build Check (PR)",
      "CI / Backend Lint & Type-Check (Python 3.12)",
      "CI / Frontend Lint & Type-Check (Node 24)",
      "PR Lint / Conventional Commit PR Title"
    ]
  },
  "enforce_admins": true,
  "required_pull_request_reviews": {
    "dismiss_stale_reviews": true,
    "require_code_owner_reviews": true,
    "required_approving_review_count": 1
  },
  "allow_force_pushes": false,
  "allow_deletions": false
}
